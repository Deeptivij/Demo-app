<body>
<h1>Editing album</h1>
 
<%= form_for :post, url: post_path(@post),:html => {:multipart => true},method: :patch do |f| %>
 
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this album from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <%= f.fields_for :post_attachments do |p| %>
 
       <%= p.label :avatar %><br>
       <%= p.file_field :avatar %>
       
   <% end %>
  <p>
    <%= f.submit %>
  </p>

<% end %>

  
<%= link_to 'Back', posts_path %>
