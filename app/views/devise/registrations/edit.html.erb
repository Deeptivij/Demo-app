<body>
<div id="left"></div>
<div id="right"></div>
<div id="top"></div>
<div id="bottom"></div>
<div class="chart">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
<div style="float:left;width:200px;">
<div class="bod">
  <div class="head"></div>
  <div class="left">
    <div class="front"></div>
  </div>
  <div class="right">
    <div class="front"></div>
  </div>
  </div>
</div>
<div style="float:right;width:200px;">
<div class="bod">
  <div class="head"></div>
  <div class="left">
    <div class="front"></div>
  </div>
  <div class="right">
    <div class="front"></div>
  </div>
  </div>
</div>
</body>
<style>
body{
    background-image: url("/assets/images101.jpeg");
   background-size: 1250px 750px;
   
   
} 
.bod {
  background : #1b1b1b;
}
div:after , div:before {
  display : block;
  content : "";
  position: absolute;
  z-index : -1;
}

.bod {
  position : relative; 
  margin   : 100px auto;
  width    : 30px;
  height   : 150px;
  border-radius : 50%;
  background : #0ff;
  border     : 1px solid #eee;
}

.bod:before , .bod:after {
  top    : -80px;
  left   : 0;
  width  : 1px;
  height : 60px;
  background : #f0f;
  transform  : rotate(-20deg);
}

.bod:after {
  left  : 30px;
  transform  : rotate(20deg);	
}

.head {
  position : absolute;
  bottom   : 99%;
  left     : -5px;
  width    : 40px;
  height   : 40px;
  border-radius : 50%;
  background : #0ff;
  box-shadow : inset 0 0 10px 0 #f4f;
}		

.head:before , .head:after {
  top    : -45px;
  left   : -10px;
  width  : 10px;
  height : 10px;
  border-radius : 50%;
  background : #f0f;
}

.head:after {
  left : 40px;
}


.left  , .right{
  width  : 50px;
  height : 50px;
  background : #f0f;
  position   : absolute;
  top        : 50px;
  z-index    : -1;
  perspective : 250;
}

.left {
  right : 100%;
  transform-origin : 100% 0;
  animation : l-fly .7s ease-out infinite alternate both;
}

.right  {
  left : 100%;
  transform-origin : 0 0;
  animation : fly .7s ease-out infinite alternate both;
}

.left:before , .right:before {
  width  : 130px;
  height : 200px;
  top    : -140px;
  z-index    : -2;
  background : #0ff;
  border-radius : 50%/60% 60% 40% 40%;
}

.left:before {
  right  : 0;
  transform : rotate(150deg);
  box-shadow : inset -5px -5px 5px 1px magenta;
}

.right:before {
  left   : 0;
  transform : rotate(-150deg);
  box-shadow : inset 5px -5px 5px 1px magenta;
}

.left:after , .right:after {
  width  : 100px;
  height : 160px;
  top    : -20px;
  z-index    : -2;
  background : #0ff;
  border-radius         : 50%/60% 60% 40% 40%;
}

.left:after {
  right  : 10px;
  transform : rotate(70deg);
  box-shadow : inset -1px -5px 5px 1px magenta;
}


.right:after {
  left   : 20px;
  transform : rotate(-70deg);
  box-shadow : inset 1px -5px 5px 1px magenta;
}

.front {
  position : absolute;
  top      : -90px;
  left     : -50px;
  z-index  : 2;
  width  : 50px;
  height : 50px;
  border-radius : 50%;
  background : #f0f;
  box-shadow : 0 0 10px 10px #ff0 , 0 120px 0 -10px #fb0 , 0 120px 10px 0 #fff;
}

.right .front {
  left     : 50px;
}

@keyframes fly {
  100% {
    transform  : rotateY(60deg);
  }
}

@keyframes l-fly {
  100% {
    transform  : rotateY(60deg);
  }
}
.chart {
  position: absolute;
    height: 150px;
    width: 300px;
    margin: -90px 0 0 -100px;
    top: 30%;
    left: 50%;
}
.chart {
    border-radius: 25px;
    border: 6px solid #8AC007;
    padding: 20px;
    width: 300px;
    height: 450px;
}
#top, #bottom, #left, #right {
	background: #FF1493;
	position: fixed;
	}
	#left, #right {
		top: 0; bottom: 0;
		width: 4px;
		}
		#left { left: 0; }
		#right { right: 0; }
		
	#top, #bottom {
		left: 0; right: 0;
		height: 4px;
		}
		#top { top: 0; }
		#bottom { bottom: 0; }
</style>
